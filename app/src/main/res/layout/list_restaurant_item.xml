<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rest_list_holder"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:id="@+id/rest_list_image"
            android:layout_width="120dp"
            android:layout_height="78dp"
            android:scaleType="fitCenter"
            android:src="@drawable/restaurant_placeholder"/>

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="78dp">

            <TextView
                android:id="@+id/rest_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat"
                android:textColor="#000"
                android:textSize="@dimen/textSizeItemTitle"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RatingBar
                    android:id="@+id/rest_list_rating_bar"
                    style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:rating="4.5" />

                <TextView
                    android:id="@+id/rest_list_rating_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="5sp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#595342"
                    android:text="(0 phiáº¿u)"
                    android:textStyle="italic"
                    android:gravity="center"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>